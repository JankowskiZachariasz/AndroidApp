<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.receiptify"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:usesCleartextTraffic="true" >
        <service
            android:name="com.receiptify.DataSyncService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.receiptify.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.receiptify.activities.ReceiptsView"
            android:parentActivityName="com.receiptify.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.receiptify.activities.AddReceipt"
            android:parentActivityName="com.receiptify.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.receiptify.activities.Products"
            android:parentActivityName="com.receiptify.MainActivity" />
        <activity
            android:name="com.receiptify.activities.Settings"
            android:parentActivityName="com.receiptify.MainActivity" />
        <activity
            android:name="com.receiptify.activities.Statistics"
            android:parentActivityName="com.receiptify.MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.receiptify.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:exported="false" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.receiptify.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>